<Page x:Class="AdminClient.EditPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AdminClient"
      xmlns:mui="http://firstfloorsoftware.com/ModernUI"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="Students">

    <Grid Style="{StaticResource ContentRoot}">
        <mui:ModernTab SelectedSource="/Content/StudentList.xaml" Layout="Tab">
            <mui:ModernTab.Links>
                <mui:Link DisplayName="Тести" Source="/Content/TestList.xaml" />
                <mui:Link DisplayName="Студенти" Source="/Content/StudentList.xaml" />
                <mui:Link DisplayName="Групи" Source="/Content/GroupList.xaml" />
            </mui:ModernTab.Links>
        </mui:ModernTab>
    </Grid>
</Page>
