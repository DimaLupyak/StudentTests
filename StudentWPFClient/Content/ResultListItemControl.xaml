<UserControl x:Class="StudentWpfClient.Content.ResultListItemControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"               
             xmlns:converters="clr-namespace:StudentWpfClient.Converters"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:StudentWpfClient.Content"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="300">
    <UserControl.Resources>
        <converters:TestIdToNameConvertor x:Key="testIdToNameConvertor"/>
    </UserControl.Resources>
    <DockPanel Width="{Binding RelativeSource={RelativeSource Mode=FindAncestor,
          AncestorType={x:Type Expander}}, Path=ActualWidth}">        
        <TextBlock DockPanel.Dock="Right" Text="{Binding CorrectCount}" Margin="0,0,40,0"/>
        <TextBlock DockPanel.Dock="Right" Text="{Binding SpentTime}" Margin="0,0,10,0"/>
        <TextBlock DockPanel.Dock="Right" Text="{Binding ResultDate, StringFormat='{}{0:dd-MM-yyyy HH:mm}'}" Margin="0,0,10,0"/>
        <TextBlock DockPanel.Dock="Right" Text="{Binding TestId, Converter={StaticResource testIdToNameConvertor}}" />
    </DockPanel>
</UserControl>
