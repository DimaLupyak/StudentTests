<UserControl x:Class="StudentWpfClient.Content.ResultsListControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:StudentWpfClient.Content"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="300">
    <UserControl.Resources>
        <DataTemplate x:Key="DataTemplate_ResultListItem">
            <local:ResultListItemControl DataContext="{Binding}" Margin="1,1,1,1"/>
        </DataTemplate>
    </UserControl.Resources>
    <StackPanel>
        <TextBlock Text="Результати:" HorizontalAlignment="Center"/>
        <ItemsControl ItemsSource="{Binding Results}" ItemTemplate="{StaticResource DataTemplate_ResultListItem}"/>
    </StackPanel>
</UserControl>